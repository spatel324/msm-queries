<h1>Actor #<%= @the_actor.id %> details</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @the_actor.image %> style="width:250px;">
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_actor.created_at %>
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
  <% matching_characters = Character.where({:actor_id => @the_actor.id})%>
  <% matching_characters.each do |character| %>
  <tr>
  <% matching_movie = Movie.where({:id => character.movie_id}).first%>
  <% matching_director = Director.where({:id => matching_movie.director_id}).first%>
    <td>
      <%= matching_movie.title %>
    </td>

    <td>
     <%= matching_movie.year %>
    </td>

    <td>
      <%= matching_director.name %>
    </td>

    <td>
      <%= character.name %>
    </td>

    <td>
      <a href="/movies/<%= matching_movie.id %>">Show details</a>
    </td>
  </tr>
    <% end %>
</table>
