<h1>Director #<%= @the_director.id %> details</h1>

<a href="/directors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @the_director.image %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>
  <% matching_films = Movie.where({:director_id => @the_director.id}) %>%
  <% matching_films.each do |film| %>
  <tr>
    <td>
      <%= film.id %>
    </td>

    <td>
     <img src=<%= film.image %> style="width:250px">
    </td>

    <td>
      <%= film.title %>
    </td>

    <td>
      <%= film.year %>
    </td>

    <td>
      <%= @the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= film.id %>">Show details</a>
    </td>
  </tr>
    <% end %>
</table>
